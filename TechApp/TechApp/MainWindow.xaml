<Window x:Class="TechApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Icon="Tap-icon.png">
    <Window.Background>
        <ImageBrush ImageSource="NewBG.png"/>
    </Window.Background>
    <Grid>
        <Image HorizontalAlignment="Center" Height="100" Margin="396,361,423,228" VerticalAlignment="Center" Width="453" Source="button-next.png" TouchDown="Clicked" MouseLeftButtonDown="Tapped"/>
        <Label Content="TAP TO START:" HorizontalAlignment="Center" Margin="396,255,400,333" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" Height="101" Width="476" FontWeight="ExtraLight">
            <Label.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Button Content="Button" HorizontalAlignment="Left" Margin="167,150,0,0" VerticalAlignment="Top" Width="176" Height="99" Click="Test"/>
    </Grid>
</Window>
    
