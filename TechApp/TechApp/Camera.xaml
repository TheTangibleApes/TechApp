<Window x:Name="camWindow" x:Class="TechApp.Camera"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF C# WebCam" Height="720" Width="1280" Loaded="mainWindow_Loaded">
    <!-- Design by Jacob Lowry -->
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="0.916"/>
            <GradientStop Color="White" Offset="0.145"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,45.5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.442*"/>
            <RowDefinition Height="0.067*"/>
            <RowDefinition Height="0.088*"/>
            <RowDefinition Height="0.293*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.068*"/>
            <ColumnDefinition Width="0.274*"/>
            <ColumnDefinition Width="0.069*"/>
            <ColumnDefinition Width="0.274*"/>
            <ColumnDefinition Width="0.315*"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Column="1" BorderThickness="3" CornerRadius="3" Grid.ColumnSpan="4" Margin="249.5,26,282,0" Grid.RowSpan="4">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0.047"/>
                    <GradientStop Color="#FF00907A" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
        </Border>
        <StackPanel Grid.Column="3" Grid.Row="4" Orientation="Horizontal" Margin="0,49,133.5,100" RenderTransformOrigin="4.577,1.32" HorizontalAlignment="Right" Width="79.75">
            <Button x:Name="bntSaveImage" Content="Save Image" Margin="8,0,0,0" Click="bntSaveImage_Click" RenderTransformOrigin="2.369,0.433" Width="66" />
        </StackPanel>
        <StackPanel Grid.Column="4" Grid.Row="1" VerticalAlignment="Center"/>
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"/>
        <Button x:Name="bntContinue" Content="Continue" Margin="247.75,43,289.25,98" Click="bntContinue_Click" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" />
        <Image x:Name="imgVideo" Stretch="Fill"   Grid.ColumnSpan="4" Grid.Column="1" Margin="249.5,30,287,6" Grid.RowSpan="4"   />
        <Button x:Name="bntCapture" Content="Capture Image" Click="bntCapture_Click" Grid.Column="1" Margin="251.75,45,256.25,97" Grid.Row="4" Grid.ColumnSpan="3" />
        <Button Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="10,122,0,0" Grid.Row="4" VerticalAlignment="Top" Width="283" Height="70" Click="Return">
            <Button.Background>
                <ImageBrush ImageSource="button-next.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
