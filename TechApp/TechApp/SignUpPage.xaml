<Window x:Class="TechApp.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechApp"
        mc:Ignorable="d"
        Title="SignUpPage" Height="720" Width="1280">
    <Window.Background>
        <ImageBrush ImageSource="BGImage.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="72" Foreground="White" Width="400" Height="100">
            <Label.Background>
                <ImageBrush ImageSource="Tech_LOGO.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="label1" Content="First Name:" HorizontalAlignment="Left" Margin="264,129,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" RenderTransformOrigin="0.69,0.207" Height="60" Width="205"/>
        <Label x:Name="label2" Content="Last Name:" HorizontalAlignment="Left" Margin="264,221,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="200"/>
        <Label x:Name="label3" Content="Phone:" HorizontalAlignment="Left" Margin="264,317,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="146"/>
        <Label x:Name="label4" Content="Email:" HorizontalAlignment="Left" Margin="264,411,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="118"/>
        <Label x:Name="label5" Content="Company (Optional):" HorizontalAlignment="Left" Margin="264,502,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="60" Margin="734,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="60" Margin="734,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="60" Margin="734,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="60" Margin="734,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36"/>
        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="60" Margin="734,502,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36"/>
        <Button x:Name="button" Content="" HorizontalAlignment="Left" Margin="862,579,0,0" VerticalAlignment="Top" Width="400" Height="100" FontSize="24" BorderBrush="#FF7C7272" Click="button_Click" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="button-next.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="" HorizontalAlignment="Left" Margin="10,579,0,0" VerticalAlignment="Top" Width="400" Height="100" FontSize="24" Click="button1_Click" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="button-previous.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
