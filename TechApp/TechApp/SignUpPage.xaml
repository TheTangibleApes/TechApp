<Window x:Class="TechApp.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechApp"
        mc:Ignorable="d"
        Title="SignUpPage" Height="720" Width="1280">
    <Window.Background>
        <ImageBrush ImageSource="NewBG.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="439*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Label x:Name="label1" Content="First Name:" HorizontalAlignment="Left" Margin="262,79,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" RenderTransformOrigin="0.69,0.207" Height="60" Width="205">
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Label x:Name="label2" Content="Last Name:" HorizontalAlignment="Left" Margin="262,171,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="200">
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Label x:Name="label3" Content="Phone:" HorizontalAlignment="Left" Margin="262,267,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="146">
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Label x:Name="label4" Content="Email:" HorizontalAlignment="Left" Margin="262,361,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60" Width="118">
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Label x:Name="label5" Content="Company (Optional):" HorizontalAlignment="Left" Margin="262,452,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White" Height="60">
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="60" Margin="732,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="60" Margin="732,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="60" Margin="732,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="60" Margin="732,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="60" Margin="732,452,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontSize="36" Grid.ColumnSpan="2"/>
        <Button x:Name="button" Content="" Margin="0,0,10,10" Width="400" Height="100" FontSize="24" BorderBrush="#FF7C7272" Click="button_Click" BorderThickness="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <ImageBrush ImageSource="button-next.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="" Width="400" Height="100" FontSize="24" Click="button1_Click" BorderThickness="0" Margin="10,0,10,10" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <ImageBrush ImageSource="button-previous.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
