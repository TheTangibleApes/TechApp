<Window x:Class="TechApp.TsAndCs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechApp"
        mc:Ignorable="d"
        Title="TsAndCs" Height="720" Width="1280">
    <Window.Background>
        <ImageBrush ImageSource="NewBG.jpg"/>
    </Window.Background>
    <Grid>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="72" Width="400" Height="100">
            <Label.Background>
                <ImageBrush ImageSource="Tech_LOGO.png"/>
            </Label.Background>
        </Label>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="415" Margin="382,115,0,0" VerticalAlignment="Top" Width="505"/>
        <CheckBox x:Name="checkBox" Content="Yes" HorizontalAlignment="Left" Margin="460,609,0,0" VerticalAlignment="Top" FontSize="36" Width="101" Foreground="#FF0F0D0D" FontWeight="Bold"/>
        <CheckBox x:Name="checkBox1" Content="No" HorizontalAlignment="Left" Margin="712,600,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FF0A0A0A" Background="White"/>
        <Button x:Name="button" Content="" HorizontalAlignment="Left" Margin="10,579,0,0" VerticalAlignment="Top" Width="400" Height="100" Click="button_Click">
            <Button.Background>
                <ImageBrush ImageSource="button-previous.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="" HorizontalAlignment="Left" Margin="862,579,0,0" VerticalAlignment="Top" Width="400" Height="100" Click="button1_Click">
            <Button.Background>
                <ImageBrush ImageSource="button-next.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="label1" Content="Do you agree to these terms?" HorizontalAlignment="Left" Margin="382,535,0,0" VerticalAlignment="Top" FontSize="36" Foreground="#FF0A0A0A" FontWeight="Bold"/>

    </Grid>
</Window>
